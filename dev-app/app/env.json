{
  "aliases": [
    {
      "key": "assetsPath",
      "value": "@{basePath}/assets"
    }
  ],
  "components": [
    {
      "name": "core/logger",
      "debug": true,
      "publish": true,
      "port": 9001,
      "file": "server.log"
    },

    {
      "name": "core/router",
      "errorRoute": "core/error"
    },
    {
      "name": "core/favicon",
      "path": "@{basePath}/favicon.ico"
    },
    {
      "name": "core/view",
      "themes": "@{appPath}/themes/",
      "views": "@{appPath}/views/",
      "theme": "default",
      "cache": true
    },
    {
      "name": "core/assets",
      "path": "@{basePath}/storage/",
      "hook": "^\\/assets"
    }
  ],
  "config": "config-test.js",
  "assetsPath": "@{assetsPath}",
  "port": 9000
}